<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Online shopping</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .a-white {
            color: white !important;
            text-decoration: none;
        }
    </style>
</head>
<body>
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <img src="~/Content/Logo3.jpg" style="height: 50px; width: 60px; margin-right: 5px " />
        </div>
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("BrandBucket", "Index", "SiteHome", new { area = "" }, new { @class = "navbar-brand", style = "margin-right: 730px" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <img src="~/Content/Message.png" style="height: 20px; width: 20px; margin-left: 5px; margin-top: 15px; background-color: black; color: black " />
                <li>@Html.ActionLink("Sign In", "Index", "SignIn")</li>
                <li>@Html.ActionLink("My Account", "GetAccount", "Account")</li>
            </ul>
        </div>
    </div>
</div>
<p></p>
    <div class="row">
        <div class="container text-center col-md-12 h2" >
          
            <div class="col-md-3" style="background-color: #D584AD; color-primary:#FFFFFF">
                @Html.ActionLink("Female", "Index", "SiteHome",new {@class= "a-white" })
            </div>
            
            <div class="col-md-3" style="background-color:blue">
                @Html.ActionLink("Male", "Index", "SiteHome",new { @class = "a-white" })
            </div>
        </div>
    </div>
<p></p>
    <div class="container body-content">

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - BrandBucket.com Ltd</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
